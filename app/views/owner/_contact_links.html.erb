<div class="ui list">
  <div class="item">
    <i class="marker icon"></i>
    <div class="content">
      <%= @owner.location %>
    </div>
  </div>
  <div class="item">
    <i class="mail icon"></i>
    <div class="content">
      <%= link_to @owner.email, "mailto:#{@owner.email}", target: '_blank' %>
    </div>
  </div>
  <div class="item">
    <i class="linkify icon"></i>
    <div class="content">
      <%= link_to 'GitHub profile', @owner.github, target: '_blank' %>
    </div>
  </div>
  <div class="item">
    <i class="linkify icon"></i>
    <div class="content">
      <%= link_to 'LinkedIn profile', @owner.linkedin, target: '_blank' %>
    </div>
  </div>
</div>
