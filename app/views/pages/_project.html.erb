<div class="ui raised segment">
	<h3 class="ui center aligned header"><%= title %></h3>
  <div class="ui image">
    <%= image_tag img %>
  </div>
	<p><%= description %></p>
	<div class="ui list">
		<div class="item">
			<i class="github square icon"></i>
			<div class="content">
        <%= link_to 'source code', repo_url, target: '_blank' %>
			</div>
		</div>
		<div class="item">
      <i class="linkify icon"></i>
			<div class="content">
        <%= link_to 'live site', site_url, target: '_blank' %>
			</div>
		</div>
	</div>
</div>
