<div class="column" id="project-<%= project.id %>">
  <div class="ui raised segment">
    <div class="ui grid">
      <div class="one column row">
        <div class="column">
          <h3 class="ui center aligned header"><%= project.title %></h3>
          <div class="ui image">
            <%= image_tag project.demo_image, alt: 'demo image' %>
          </div>
        </div>
      </div>
      <div class="one column row">
        <div class="column">
          <%= simple_format(project.description) %>
          <div class="ui list">
            <div class="item">
              <i class="github square icon"></i>
              <div class="content">
                <%= link_to 'source code', project.repo, target: '_blank' %>
              </div>
            </div>
            <div class="item">
              <i class="linkify icon"></i>
              <div class="content">
                <%= link_to 'live version', project.site, target: '_blank' %>
              </div>
            </div>
          </div>
          <%= render_buttons(controller.controller_name, controller.action_name, project) %>
        </div>
      </div>
    </div>
  </div>
</div>
